{
  "name": "platform-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --parallel --filter @platform/backend --filter @platform/frontend run dev",
    "dev:backend": "pnpm --filter @platform/backend dev",
    "dev:frontend": "pnpm --filter @platform/frontend dev",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "typecheck": "pnpm -r typecheck",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.6",
    "prettier": "^3.3.3",
    "tsx": "^4.7.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm exec prettier --write"
    ]
  }
}
